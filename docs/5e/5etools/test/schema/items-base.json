{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "items-base.json",
	"version": "1.5.1",
	"$defs": {
		"itemPropertyLookupArray": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/itemPropertyLookup"
			}
		},
		"itemTypeLookupArray": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/itemTypeLookup"
			}
		},
		"itemLookupBase": {
			"type": "object",
			"properties": {
				"abbreviation": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"page": {
					"$ref": "util.json#/$defs/page"
				},
				"name": {
					"type": "string"
				}
			},
			"additionalProperties": false,
			"required": [
				"abbreviation",
				"source",
				"page"
			]
		},
		"itemPropertyLookup": {
			"anyOf": [
				{
					"type": "object",
					"properties": {
						"abbreviation": {
							"type": "string"
						},
						"source": {
							"type": "string"
						},
						"page": {
							"$ref": "util.json#/$defs/page"
						},
						"name": {
							"type": "string"
						},
						"template": {
							"type": "string"
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						}
					},
					"additionalProperties": false,
					"required": [
						"abbreviation",
						"source",
						"page"
					]
				},
				{
					"type": "object",
					"properties": {
						"abbreviation": {
							"type": "string"
						},
						"source": {
							"type": "string"
						},
						"page": {
							"$ref": "util.json#/$defs/page"
						},
						"name": {
							"type": "string"
						},
						"template": {
							"type": "string"
						},
						"entriesTemplate": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						}
					},
					"additionalProperties": false,
					"required": [
						"abbreviation",
						"source",
						"page"
					]
				}
			]
		},
		"itemTypeLookup": {
			"anyOf": [
				{
					"type": "object",
					"properties": {
						"abbreviation": {
							"type": "string"
						},
						"source": {
							"type": "string"
						},
						"page": {
							"$ref": "util.json#/$defs/page"
						},
						"name": {
							"type": "string"
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						}
					},
					"additionalProperties": false,
					"required": [
						"abbreviation",
						"source",
						"page"
					]
				},
				{
					"type": "object",
					"properties": {
						"abbreviation": {
							"type": "string"
						},
						"source": {
							"type": "string"
						},
						"page": {
							"$ref": "util.json#/$defs/page"
						},
						"name": {
							"type": "string"
						},
						"entriesTemplate": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						}
					},
					"additionalProperties": false,
					"required": [
						"abbreviation",
						"source",
						"page"
					]
				}
			]
		}
	},
	"type": "object",
	"properties": {
		"baseitem": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"type": {
						"$ref": "items-shared.json#/$defs/itemType"
					},
					"rarity": {
						"$ref": "items-shared.json#/$defs/itemRarity"
					},
					"source": {
						"type": "string"
					},
					"page": {
						"$ref": "util.json#/$defs/page"
					},
					"ac": {
						"type": "integer"
					},
					"age": {
						"$ref": "items-shared.json#/$defs/itemAge"
					},
					"armor": {
						"description": "Flag used when merging generic variants",
						"type": "boolean"
					},
					"axe": {
						"type": "boolean"
					},
					"dmg1": {
						"type": "string"
					},
					"dmg2": {
						"type": "string"
					},
					"dmgType": {
						"$ref": "util.json#/$defs/dataDamageTags"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"property": {
						"$ref": "items-shared.json#/$defs/itemProperty"
					},
					"range": {
						"type": "string"
					},
					"reload": {
						"type": "integer"
					},
					"scfType": {
						"$ref": "items-shared.json#/$defs/itemScfType"
					},
					"stealth": {
						"type": "boolean"
					},
					"strength": {
						"type": "string"
					},
					"sword": {
						"type": "boolean"
					},
					"mace": {
						"type": "boolean"
					},
					"spear": {
						"type": "boolean"
					},
					"hammer": {
						"type": "boolean"
					},
					"bow": {
						"type": "boolean"
					},
					"crossbow": {
						"type": "boolean"
					},
					"club": {
						"type": "boolean"
					},
					"dagger": {
						"type": "boolean"
					},
					"net": {
						"type": "boolean"
					},
					"firearm": {
						"type": "boolean"
					},
					"staff": {
						"description": "Adds the italicized \"Staff\" text to the item info line (below the name).",
						"type": "boolean"
					},
					"value": {
						"description": "In copper pieces.",
						"type": "number"
					},
					"valueMult": {
						"type": "number"
					},
					"weapon": {
						"type": "boolean"
					},
					"weaponCategory": {
						"$ref": "items-shared.json#/$defs/itemWeaponCategory"
					},
					"weight": {
						"type": "number"
					},
					"weightMult": {
						"type": "number"
					},
					"quantity": {
						"type": "integer"
					},
					"srd": {
						"$ref": "util.json#/$defs/srd"
					},
					"basicRules": {
						"$ref": "util.json#/$defs/basicRules"
					},
					"otherSources": {
						"$ref": "util.json#/$defs/otherSources"
					},
					"ammoType": {
						"$ref": "items-shared.json#/$defs/itemAmmoType"
					},
					"packContents": {
						"type": "array",
						"items": {
							"oneOf": [
								{
									"type": "string"
								},
								{
									"type": "object",
									"properties": {
										"special": {
											"type": "string"
										},
										"quantity": {
											"type": "integer"
										}
									},
									"additionalProperties": false,
									"required": [
										"special"
									]
								},
								{
									"type": "object",
									"properties": {
										"item": {
											"type": "string"
										},
										"quantity": {
											"type": "integer"
										}
									},
									"additionalProperties": false,
									"required": [
										"item",
										"quantity"
									]
								}
							]
						}
					},
					"lootTables": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"hasFluff": {
						"type": "boolean"
					},
					"hasFluffImages": {
						"type": "boolean"
					}
				},
				"required": [
					"name",
					"type",
					"rarity",
					"source"
				],
				"additionalProperties": false
			}
		},
		"itemProperty": {
			"$ref": "#/$defs/itemPropertyLookupArray"
		},
		"itemType": {
			"$ref": "#/$defs/itemTypeLookupArray"
		},
		"itemEntry": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"type": "string"
					},
					"entriesTemplate": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				}
			}
		},
		"itemTypeAdditionalEntries": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"appliesTo": {
						"type": "string"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				},
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}