{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "backgrounds.json",
	"version": "1.3.1",
	"type": "object",
	"$defs": {
		"backgroundData": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"page": {
					"$ref": "util.json#/$defs/page"
				},
				"prerequisite": {
					"$ref": "util.json#/$defs/prerequisite"
				},
				"skillProficiencies": {
					"$ref": "util.json#/$defs/skillProficiencies"
				},
				"toolProficiencies": {
					"$ref": "util.json#/$defs/toolProficiencies"
				},
				"languageProficiencies": {
					"$ref": "util.json#/$defs/languageProficiencies"
				},
				"feats": {
					"$ref": "util.json#/$defs/additionalFeatsArray"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"additionalSources": {
					"$ref": "util.json#/$defs/additionalSources"
				},
				"srd": {
					"$ref": "util.json#/$defs/srd"
				},
				"basicRules": {
					"$ref": "util.json#/$defs/basicRules"
				},
				"otherSources": {
					"$ref": "util.json#/$defs/otherSources"
				},
				"startingEquipment": {
					"$ref": "util.json#/$defs/startingEquipment"
				},
				"additionalSpells": {
					"$ref": "util.json#/$defs/additionalSpellsArray"
				},
				"fromFeature": {
					"description": "A lookup of other properties which should be tied to the \"Feature: ...\" entry. This is used when e.g. customizing a background during import to a VTT.",
					"type": "object",
					"patternProperties": {
						"^.*$": {
							"type": "boolean",
							"const": true
						}
					}
				},
				"hasFluff": {
					"type": "boolean"
				},
				"hasFluffImages": {
					"type": "boolean"
				}
			},
			"additionalProperties": false
		},
		"background": {
			"anyOf": [
				{
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"source": {
							"type": "string"
						},
						"page": {
							"$ref": "util.json#/$defs/page"
						},
						"prerequisite": {
							"$ref": "util.json#/$defs/prerequisite"
						},
						"skillProficiencies": {
							"$ref": "util.json#/$defs/skillProficiencies"
						},
						"toolProficiencies": {
							"$ref": "util.json#/$defs/toolProficiencies"
						},
						"languageProficiencies": {
							"$ref": "util.json#/$defs/languageProficiencies"
						},
						"feats": {
							"$ref": "util.json#/$defs/additionalFeatsArray"
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"additionalSources": {
							"$ref": "util.json#/$defs/additionalSources"
						},
						"srd": {
							"$ref": "util.json#/$defs/srd"
						},
						"basicRules": {
							"$ref": "util.json#/$defs/basicRules"
						},
						"otherSources": {
							"$ref": "util.json#/$defs/otherSources"
						},
						"startingEquipment": {
							"$ref": "util.json#/$defs/startingEquipment"
						},
						"additionalSpells": {
							"$ref": "util.json#/$defs/additionalSpellsArray"
						},
						"fromFeature": {
							"description": "A lookup of other properties which should be tied to the \"Feature: ...\" entry. This is used when e.g. customizing a background during import to a VTT.",
							"type": "object",
							"patternProperties": {
								"^.*$": {
									"type": "boolean",
									"const": true
								}
							}
						},
						"hasFluff": {
							"type": "boolean"
						},
						"hasFluffImages": {
							"type": "boolean"
						}
					},
					"additionalProperties": false,
					"required": [
						"name",
						"source",
						"skillProficiencies",
						"entries"
					]
				},
				{
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"source": {
							"type": "string"
						},
						"page": {
							"$ref": "util.json#/$defs/page"
						},
						"prerequisite": {
							"$ref": "util.json#/$defs/prerequisite"
						},
						"skillProficiencies": {
							"$ref": "util.json#/$defs/skillProficiencies"
						},
						"toolProficiencies": {
							"$ref": "util.json#/$defs/toolProficiencies"
						},
						"languageProficiencies": {
							"$ref": "util.json#/$defs/languageProficiencies"
						},
						"feats": {
							"$ref": "util.json#/$defs/additionalFeatsArray"
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"additionalSources": {
							"$ref": "util.json#/$defs/additionalSources"
						},
						"srd": {
							"$ref": "util.json#/$defs/srd"
						},
						"basicRules": {
							"$ref": "util.json#/$defs/basicRules"
						},
						"otherSources": {
							"$ref": "util.json#/$defs/otherSources"
						},
						"startingEquipment": {
							"$ref": "util.json#/$defs/startingEquipment"
						},
						"additionalSpells": {
							"$ref": "util.json#/$defs/additionalSpellsArray"
						},
						"fromFeature": {
							"description": "A lookup of other properties which should be tied to the \"Feature: ...\" entry. This is used when e.g. customizing a background during import to a VTT.",
							"type": "object",
							"patternProperties": {
								"^.*$": {
									"type": "boolean",
									"const": true
								}
							}
						},
						"hasFluff": {
							"type": "boolean"
						},
						"hasFluffImages": {
							"type": "boolean"
						},
						"_copy": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"source": {
									"type": "string"
								},
								"pantheon": {
									"description": "Used in deity data",
									"type": "string"
								},
								"shortName": {
									"description": "Used in subclass data",
									"type": "string"
								},
								"className": {
									"description": "Used in subclass data",
									"type": "string"
								},
								"classSource": {
									"description": "Used in subclass data",
									"type": "string"
								},
								"_mod": {
									"$ref": "util.json#/$defs/_modObject"
								},
								"_trait": {
									"type": "object",
									"properties": {
										"name": {
											"type": "string"
										},
										"source": {
											"type": "string"
										}
									},
									"required": [
										"name",
										"source"
									]
								},
								"_preserve": {
									"type": "object",
									"patternProperties": {
										".*": {
											"const": true
										}
									}
								}
							},
							"required": [
								"name",
								"source"
							],
							"additionalProperties": false
						}
					},
					"additionalProperties": false,
					"required": [
						"_copy"
					]
				}
			]
		}
	},
	"properties": {
		"background": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/background"
			}
		},
		"_meta": {
			"$ref": "util.json#/$defs/metaBlock"
		}
	},
	"required": [
		"background"
	],
	"additionalProperties": false
}