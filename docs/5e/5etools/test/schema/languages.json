{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "languages.json",
	"version": "1.1.8",
	"type": "object",
	"$defs": {
		"language": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"source": {
					"type": "string"
				},
				"page": {
					"$ref": "util.json#/$defs/page"
				},
				"srd": {
					"type": "boolean"
				},
				"basicRules": {
					"$ref": "util.json#/$defs/basicRules"
				},
				"typicalSpeakers": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"script": {
					"type": "string"
				},
				"type": {
					"type": "string",
					"enum": [
						"standard",
						"rare",
						"exotic",
						"secret"
					]
				},
				"additionalSources": {
					"$ref": "util.json#/$defs/additionalSources"
				},
				"dialects": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"fonts": {
					"description": "A list of direct URLs to font files.",
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"hasFluff": {
					"type": "boolean"
				},
				"hasFluffImages": {
					"type": "boolean"
				}
			},
			"required": [
				"name",
				"source"
			],
			"additionalProperties": false
		}
	},
	"properties": {
		"language": {
			"type": "array",
			"uniqueItems": true,
			"minItems": 1,
			"items": {
				"$ref": "#/$defs/language"
			}
		},
		"languageScript": {
			"type": "array",
			"uniqueItems": true,
			"minItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"fonts": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				},
				"required": [
					"name",
					"fonts"
				],
				"additionalProperties": false
			}
		}
	},
	"required": [
		"language"
	],
	"additionalProperties": false
}