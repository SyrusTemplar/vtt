{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "fluff-languages.json",
	"version": "1.1.2",
	"type": "object",
	"properties": {
		"languageFluff": {
			"type": "array",
			"uniqueItems": true,
			"minItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"type": "string"
					},
					"images": {
						"type": "array",
						"items": {
							"$ref": "entry.json#/$defs/entryImage"
						}
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				},
				"required": [
					"name",
					"source"
				],
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}