{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "backgrounds.json",
	"version": "1.3.1",
	"type": "object",

	"$defs": {
		"backgroundData": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"page": {"$ref": "util.json#/$defs/page"},
				"prerequisite": {
					"$ref": "util.json#/$defs/prerequisite"
				},
				"skillProficiencies": {
					"$ref": "util.json#/$defs/skillProficiencies"
				},
				"toolProficiencies": {
					"$ref": "util.json#/$defs/toolProficiencies"
				},
				"languageProficiencies": {
					"$ref": "util.json#/$defs/languageProficiencies"
				},
				"feats": {
					"$ref": "util.json#/$defs/additionalFeatsArray"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"additionalSources": {
					"$ref": "util.json#/$defs/additionalSources"
				},
				"srd": {
					"$ref": "util.json#/$defs/srd"
				},
				"basicRules": {
					"$ref": "util.json#/$defs/basicRules"
				},
				"otherSources": {
					"$ref": "util.json#/$defs/otherSources"
				},
				"startingEquipment": {
					"$ref": "util.json#/$defs/startingEquipment"
				},
				"additionalSpells": {
					"$ref": "util.json#/$defs/additionalSpellsArray"
				},
				"fromFeature": {
					"description": "A lookup of other properties which should be tied to the \"Feature: ...\" entry. This is used when e.g. customizing a background during import to a VTT.",
					"type": "object",
					"patternProperties": {
						"^.*$": {"type": "boolean", "const": true}
					}
				},
				"hasFluff": {"type": "boolean"},
				"hasFluffImages": {"type": "boolean"},
				"$$ifBrew": {
					"expertise": {
						"$ref": "util.json#/$defs/expertise"
					},
					"weaponProficiencies": {
						"$ref": "util.json#/$defs/weaponProficiencies"
					},
					"armorProficiencies": {
						"$ref": "util.json#/$defs/armorProficiencies"
					},
					"resist": {
						"$ref": "util.json#/$defs/damageResistArrayPlayer"
					},
					"immune": {
						"$ref": "util.json#/$defs/damageImmunityArrayPlayer"
					},
					"vulnerable": 	{
						"$ref": "util.json#/$defs/damageVulnerabilityArrayPlayer"
					},
					"conditionImmune": {
						"$ref": "util.json#/$defs/conditionImmunityArrayPlayer"
					},

					"fluff": {
						"description": "This is intended to be used for Homebrew only - site data should include a fluff file per source",
						"$ref": "util.json#/$defs/fluffObject"
					},
					"foundrySystem": {"$ref": "util.json#/$defs/foundrySystemObject"},
					"foundryFlags": {"$ref": "util.json#/$defs/foundryFlagsObject"},
					"foundryEffects": {"$ref": "util.json#/$defs/foundryEffectsArray"},
					"foundryImg": {"$ref": "util.json#/$defs/foundryImg"},
					"foundryAdvancement": {"$ref": "util.json#/$defs/foundryAdvancementsArray"}
				}
			},
			"additionalProperties": false
		},

		"background": {
			"anyOf": [
				{
					"type": "object",
					"$$merge": [
						{
							"$ref": "#/$defs/backgroundData"
						},
						{
							"required": [
								"name",
								"source",
								{"$$ifSite_item": "skillProficiencies"},
								"entries"
							]
						}
					]
				},
				{
					"type": "object",
					"$$merge": [
						{
							"$ref": "#/$defs/backgroundData"
						},
						{
							"$ref": "util.json#/$defs/copyBlock"
						}
					]
				}
			]
		}
	},

	"properties": {
		"background": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/background"
			}
		},
		"_meta": {
			"$ref": "util.json#/$defs/metaBlock"
		}
	},
	"required": [
		"background"
	],
	"additionalProperties": false
}
