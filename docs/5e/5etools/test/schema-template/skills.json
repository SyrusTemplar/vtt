{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "skills.json",
	"version": "1.0.1",
	"type": "object",
	"$defs": {
		"skill": {
			"type": "object",
			"properties": {
				"name": {"type": "string"},
				"source": {"type": "string"},
				"page": {"$ref": "util.json#/$defs/page"},
				"srd": {"$ref": "util.json#/$defs/srd"},
				"basicRules": {"$ref": "util.json#/$defs/basicRules"},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				}
			},
			"required": [
				"name",
				"source",
				"entries"
			],
			"additionalProperties": false
		}
	},

	"properties": {
		"skill": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/skill"
			}
		}
	},

	"required": [
		"skill"
	],

	"additionalProperties": false
}
