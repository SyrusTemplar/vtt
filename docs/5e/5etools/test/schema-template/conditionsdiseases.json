{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "conditionsdiseases.json",
	"version": "1.2.0",
	"type": "object",
	"$defs": {
		"conditionDisease": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"source": {
					"type": "string"
				},
				"page": {"$ref": "util.json#/$defs/page"},
				"srd": {
					"$ref": "util.json#/$defs/srd"
				},
				"basicRules": {
					"$ref": "util.json#/$defs/basicRules"
				},
				"otherSources": {
					"$ref": "util.json#/$defs/otherSources"
				},
				"$$ifBrew": {
					"color": {
						"description": "For homebrew use only; HTML hex color code this source should use when displayed on the DM Screen.\ne.g. \"ff00ff\"",
						"type": "string",
						"pattern": "^([a-fA-F0-9]{6}|[a-fA-F0-9]{3})$"
					},
					"fluff": {
						"description": "This is intended to be used for Homebrew only - site data should include a fluff file per source",
						"$ref": "util.json#/$defs/fluffObject"
					},
					"foundrySystem": {"$ref": "util.json#/$defs/foundrySystemObject"},
					"foundryFlags": {"$ref": "util.json#/$defs/foundryFlagsObject"},
					"foundryEffects": {"$ref": "util.json#/$defs/foundryEffectsArray"},
					"foundryImg": {"$ref": "util.json#/$defs/foundryImg"}
				},
				"hasFluff": {"type": "boolean"},
				"hasFluffImages": {"type": "boolean"}
			},
			"required": [
				"name",
				"entries",
				"source",
				"page"
			],
			"additionalProperties": false
		}
	},
	"properties": {
		"condition": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/conditionDisease"
			}
		},
		"disease": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/conditionDisease"
			}
		},
		"status": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/conditionDisease"
			}
		}
	},
	"required": [
		"condition",
		"disease",
		"status"
	],
	"additionalProperties": false
}
