{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "trapshazards.json",
	"version": "1.3.0",
	"type": "object",

	"$defs": {
		"trap": {
			"oneOf": [
				{
					"description": "Older format, used in DMG",
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"trapHazType": {
							"type": "string",
							"description": "MAG: Magical Trap\n MECH: Mechanical Trap",
							"enum": [
								"MECH",
								"MAG"
							]
						},
						"source": {
							"type": "string"
						},
						"page": {"$ref": "util.json#/$defs/page"},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"srd": {"$ref": "util.json#/$defs/srd"},
						"$$ifBrew": {
							"foundryImg": {
								"$ref": "util.json#/$defs/foundryImg"
							}
						}
					},
					"additionalProperties": false,
					"required": [
						"name",
						"trapHazType",
						"source",
						"entries"
					]
				},
				{
					"description": "XGE \"Traps Revisited\" Simple/Complex traps",
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"trapHazType": {
							"type": "string",
							"enum": [
								"SMPL",
								"CMPX"
							]
						},
						"source": {
							"type": "string"
						},
						"page": {"$ref": "util.json#/$defs/page"},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"tier": {
							"type": "integer",
							"minimum": 1,
							"maximum": 4
						},
						"level": {
							"description": "Alternative to \"tier\" which allows for non-standard level ranges.",
							"type": "object",
							"properties": {
								"min": {"type": "integer"},
								"max": {"type": "integer"}
							}
						},
						"threat": {
							"type": "string",
							"enum": ["moderate", "dangerous", "deadly"]
						},
						"trigger": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"initiative": {
							"oneOf": [
								{
									"type": "integer",
									"minimum": 1,
									"maximum": 3
								},
								{
									"$$ifBrew_item": {
										"description": "Custom initiative, for homebrew only.",
										"type": "string"
									}
								}
							]
						},
						"initiativeNote": {
							"$ref": "entry.json"
						},
						"effect": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"eActive": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"eDynamic": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"eConstant": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"countermeasures": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"srd": {"$ref": "util.json#/$defs/srd"},
						"$$ifBrew": {
							"foundryImg": {
								"$ref": "util.json#/$defs/foundryImg"
							}
						}
					},
					"additionalProperties": false,
					"required": [
						"name",
						"trapHazType",
						"source",
						"entries",
						"threat",
						"trigger",
						"countermeasures"
					]
				}
			]
		},

		"hazard": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"trapHazType": {
					"type": "string",
					"description": "ENV: Environmental Hazard\n EST: Eldritch Storm\n GEN: Generic\n WTH: Weather\n WLD: Wilderness Hazard",
					"$$ifSiteElse_key": {
						"keySite": "enum",
						"keyBrew": "examples",
						"value": [
							"ENV",
							"EST",
							"GEN",
							"WTH",
							"WLD"
						]
					}
				},
				"source": {
					"type": "string"
				},
				"page": {"$ref": "util.json#/$defs/page"},
				"otherSources": {
					"$ref": "util.json#/$defs/otherSources"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"srd": {"$ref": "util.json#/$defs/srd"},
				"$$ifBrew": {
					"foundrySystem": {"$ref": "util.json#/$defs/foundrySystemObject"},
					"foundryFlags": {"$ref": "util.json#/$defs/foundryFlagsObject"},
					"foundryEffects": {"$ref": "util.json#/$defs/foundryEffectsArray"},
					"foundryImg": {"$ref": "util.json#/$defs/foundryImg"}
				}
			},
			"additionalProperties": false,
			"required": [
				"name",
				"source",
				"entries"
			]
		}
	},

	"properties": {
		"trap": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/trap"
			}
		},
		"hazard": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/hazard"
			}
		}
	},
	"additionalProperties": false
}
