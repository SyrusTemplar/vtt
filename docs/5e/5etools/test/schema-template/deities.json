{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "deities.json",
	"version": "1.2.4",
	"type": "object",

	"$defs": {
		"deityData": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"reprintAlias": {
					"type": "string"
				},
				"alignment": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "util.json#/$defs/alignment"
					}
				},
				"title": {
					"type": "string"
				},
				"pantheon": {
					"type": "string",
					"$$ifSiteElse_key": {
						"keySite": "enum",
						"keyBrew": "examples",
						"value": [
							"Celtic",
							"Dawn War",
							"Dragonlance",
							"Drow",
							"Dwarven",
							"Eberron",
							"Egyptian",
							"Elven",
							"Faer√ªnian",
							"Forgotten Realms",
							"Gnomish",
							"Greek",
							"Greyhawk",
							"Halfling",
							"Nonhuman",
							"Norse",
							"Orc",
							"Gnome",
							"Duergar",
							"Exandria",
							"Theros",
							"Unknown"
						]
					}
				},
				"category": {
					"type": "string"
				},
				"domains": {
					"type": "array",
					"minItems": 1,
					"uniqueItems": true,
					"items": {
						"type": "string",
						"$$ifSiteElse_key": {
							"keySite": "enum",
							"keyBrew": "examples",
							"value": [
								"Arcana", "Death", "Knowledge", "Life", "Light", "Nature", "Tempest", "Trickery", "War", "Forge", "Grave", "Order", "Peace", "Twilight", "Unknown"
							]
						}
					}
				},
				"province": {
					"description": "The nouveau form of \"title\", first seen in MTF",
					"type": "string"
				},
				"symbol": {
					"type": "string"
				},
				"$$ifBrew": {
					"customProperties": {
						"description": "For homebrew use only; a key-value dict of the form: `\"Typical Worshipers\": \"Half-elf Bards\"`",
						"type": "object"
					},
					"foundryImg": {
						"$ref": "util.json#/$defs/foundryImg"
					}
				},
				"source": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"page": {"$ref": "util.json#/$defs/page"},
				"additionalSources": {
					"$ref": "util.json#/$defs/additionalSources"
				},
				"altNames": {
					"type": "array",
					"minItems": 1,
					"uniqueItems": true,
					"items": {
						"type": "string"
					}
				},
				"symbolImg": {
					"$ref": "entry.json#/$defs/entryImage"
				},
				"srd": {
					"$ref": "util.json#/$defs/srd"
				},
				"basicRules": {
					"$ref": "util.json#/$defs/basicRules"
				},
				"customExtensionOf": {
					"type": "string",
					"description": "A UID of an existing deity that this deity extends. e.g. \"Bahgtru|Orc|SCAG\""
				},
				"piety": {"type": "boolean"}
			},
			"additionalProperties": false
		},

		"deity": {
			"anyOf": [
				{
					"type": "object",
					"$$merge": [
						{
							"$ref": "#/$defs/deityData"
						},
						{
							"required": [
								"name",
								"pantheon",
								"source"
							]
						}
					]
				},
				{
					"type": "object",
					"$$merge": [
						{
							"$ref": "#/$defs/deityData"
						},
						{
							"$ref": "util.json#/$defs/copyBlock"
						}
					]
				}
			]
		}
	},

	"properties": {
		"deity": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/deity"
			}
		},
		"_meta": {
			"$ref": "util.json#/$defs/metaBlock"
		}
	},
	"additionalProperties": false
}
