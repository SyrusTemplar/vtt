{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "names.json",
	"version": "1.2.3",
	"title": "NameArray",
	"type": "object",

	"$defs": {
		"nameTableRow": {
			"type": "object",
			"properties": {
				"min": {
					"type": "integer"
				},
				"max": {
					"type": "integer"
				},
				"result": {
					"type": "string"
				}
			},
			"required": [
				"min",
				"max",
				"result"
			],
			"additionalProperties": false
		},

		"nameTable": {
			"type": "object",
			"properties": {
				"option": {
					"type": "string"
				},
				"diceType": {
					"type": "integer"
				},
				"table": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/nameTableRow"
					}
				}
			},
			"required": [
				"option",
				"table"
			],
			"additionalProperties": false
		},

		"name": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"page": {"$ref": "util.json#/$defs/page"},
				"tables": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/nameTable"
					}
				}
			},
			"required": [
				"name",
				"source",
				"tables"
			],
			"additionalProperties": false
		}
	},

	"properties": {
		"name": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/name"
			}
		}
	},

	"required": ["name"],
	"additionalProperties": false
}
