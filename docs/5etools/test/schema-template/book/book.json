{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "book.json",
	"version": "1.1.0",
	"type": "object",

	"definitions": {
		"ruleBook": {
			"type": "object",
			"properties": {
				"$$ifBrew": {
					"id": {"type": "string"},
					"source": {"type": "string"}
				},

				"$$ifNotFast": {
					"entries": {
						"type": "array",
						"items": {
							"$ref": "../entry.json"
						}
					}
				}
			},
			"$$ifBrew": {
				"required": ["id", "source"]
			}
		}
	},

	"properties": {
		"data": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/ruleBook"
			}
		}
	},
	"additionalProperties": false
}
